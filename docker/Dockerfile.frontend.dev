# ===========================================
# Development Dockerfile for Cal3 React Frontend
# Hot-reload with Vite enabled
# ===========================================

FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY ../frontend/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY ../frontend/ .

# Expose Vite dev server port
EXPOSE 8080

# Start Vite dev server with hot reload
# Use --host to allow access from outside container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "8080"]
